<div class="container">
  <header class="arcade-header">
    <h1 class="arcade-title"><%= title %></h1>
    <p class="arcade-subtitle">Parametre du site</p>
  </header>

  <div class="parametre-wrapper">
    <div class="parametre-container">

      <!-- Contr√¥le du volume -->
      <div class="parametre-section">
        <h2 class="parametre-title">Volume de la musique</h2>

        <div class="volume-control">
          <label for="volume-slider" class="volume-label">
            <span class="volume-icon">üîä</span>
            <span id="volume-value">50%</span>
          </label>
          <input
            type="range"
            id="volume-slider"
            min="0"
            max="100"
            value="50"
            class="volume-slider"
          >
        </div>
      </div>

      <!-- 2FA (Two-Factor Authentication) -->
      <div class="parametre-section">
        <h2 class="parametre-title">üîê Authentification √† deux facteurs (2FA)</h2>

        <!-- √âtat: 2FA d√©sactiv√© -->
        <div id="twofa-disabled" class="twofa-state" style="display: none;">
          <p class="twofa-description">
            Le 2FA n'est pas activ√©. Ajoutez une couche de s√©curit√© suppl√©mentaire √† votre compte.
          </p>
          <button id="btn-setup-2fa" class="btn btn-primary">Configurer le 2FA</button>
        </div>

        <!-- √âtat: Configuration en cours -->
        <div id="twofa-setup" class="twofa-state" style="display: none;">
          <p class="twofa-description">
            Scannez ce QR code avec Google Authenticator, Authy ou toute autre application d'authentification :
          </p>
          <div class="twofa-qrcode-container">
            <img id="twofa-qrcode" src="" alt="QR Code 2FA" class="twofa-qrcode">
          </div>
          <p class="twofa-help">
            Entrez le code √† 6 chiffres de votre application pour activer le 2FA :
          </p>
          <input
            type="text"
            id="twofa-verify-code"
            class="twofa-code-input"
            maxlength="6"
            placeholder="000 000"
            autocomplete="off"
            inputmode="numeric"
            pattern="[0-9]*"
          >
          <div class="twofa-buttons">
            <button id="btn-activate-2fa" class="btn btn-success">Activer</button>
            <button id="btn-cancel-setup" class="btn btn-secondary">Annuler</button>
          </div>
          <div id="twofa-setup-error" class="error-message" style="display: none;"></div>
        </div>

        <!-- √âtat: 2FA activ√© -->
        <div id="twofa-enabled" class="twofa-state" style="display: none;">
          <p class="twofa-description">
            ‚úÖ Le 2FA est activ√© sur votre compte. Vous devrez entrer un code √† chaque connexion.
          </p>
          <button id="btn-disable-2fa" class="btn btn-danger">D√©sactiver le 2FA</button>
        </div>

        <!-- Modal: D√©sactivation 2FA -->
        <div id="twofa-disable-modal" class="twofa-modal" style="display: none;">
          <div class="twofa-modal-content">
            <h3>D√©sactiver le 2FA</h3>
            <p>Entrez votre code 2FA pour confirmer la d√©sactivation :</p>
            <input
              type="text"
              id="twofa-disable-code"
              class="twofa-code-input"
              maxlength="6"
              placeholder="000 000"
              autocomplete="off"
              inputmode="numeric"
              pattern="[0-9]*"
            >
            <div class="twofa-buttons">
              <button id="btn-confirm-disable" class="btn btn-danger">Confirmer</button>
              <button id="btn-cancel-disable" class="btn btn-secondary">Annuler</button>
            </div>
            <div id="twofa-disable-error" class="error-message" style="display: none;"></div>
          </div>
        </div>
      </div>

      <!-- D√©connexion -->
      <div class="parametre-section">
        <h2 class="parametre-title">Compte</h2>
        <button id="logout-btn" class="logout-btn">Deconnexion</button>
      </div>

    </div>
  </div>

</div>

