<div class="container">
  <header class="arcade-header" style="border-bottom: none;">
    <h1 class="arcade-title"><%= title %></h1>
    <p class="arcade-subtitle">Le premier à 3 points gagne la partie</p>
  </header>
  <div class="match-wrapper">
    <!-- === Joueur 1 === -->
    <div id="player-Left-Card-Match" class="player-card player-left">
      <img src="/static/util/icon/profile.png" alt="Profil Joueur 1" class="player-avatar">
      <h2 class="player-name">Joueur 1</h2>
      <p class="player-type">Humain</p>
      <p class="player-controls">Commandes :<br><span id="cmd_Left_show">↑ / ↓</span></p>
      <p class="player-score">Score : <span id="score-j1">0</span></p>
      <!-- Indicateur Dash Power-up -->
      <div id="dash-indicator-left" class="dash-indicator" style="display: none;">
        <div class="dash-cooldown-ring">
          <svg viewBox="0 0 36 36">
            <circle class="dash-ring-bg" cx="18" cy="18" r="16"></circle>
            <circle class="dash-ring-progress" cx="18" cy="18" r="16"></circle>
          </svg>
          <span class="dash-icon">⚡</span>
        </div>
        <span class="dash-hint" id="dash-hint-left">Gauche + direction</span>
      </div>
    </div>

    <!-- === Canvas du jeu === -->
    <!-- definir la taille du canvas comme haut max qui peut avoir -->
    <canvas id="game-canvas"></canvas>

    <!-- === Joueur 2 === -->
    <div id="player-Right-Card-Match" class="player-card player-right">
      <img src="/static/util/icon/profile_robot.png" alt="Profil Joueur 2" class="player-avatar">
      <h2 class="player-name">Joueur 2</h2>
      <p class="player-type">IA</p>
      <p class="player-controls">Commandes :<br><span id="cmd_Right_show">robot technique</span></p>
      <p class="player-score">Score : <span id="score-j2">0</span></p>
      <!-- Indicateur Dash Power-up -->
      <div id="dash-indicator-right" class="dash-indicator" style="display: none;">
        <div class="dash-cooldown-ring">
          <svg viewBox="0 0 36 36">
            <circle class="dash-ring-bg" cx="18" cy="18" r="16"></circle>
            <circle class="dash-ring-progress" cx="18" cy="18" r="16"></circle>
          </svg>
          <span class="dash-icon">⚡</span>
        </div>
        <span class="dash-hint" id="dash-hint-right">Droite + direction</span>
      </div>
    </div>
  </div>
</div>
<!-- en gros a gauche info joueur 1 une sorte de carte a droite pariel pour le joueur 2 aux mielieux le teraain -->