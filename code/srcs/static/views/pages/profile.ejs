<div class="container">
  <header class="arcade-header">
    <h1 class="arcade-title"><%= title %></h1>
    <p class="arcade-subtitle">Voici la page profile de : <span id="profile-username" class="profile-username-display"></span></p>
  </header>

  <div class="profile-wrapper">
    <!-- PROFILE HEADER + STATS + TOUCHES -->
    <section class="profile-card">
      <div class="profile-main">
        <!-- PHOTO -->
        <div class="profile-picture-box">
          <img id="profile-picture" alt="Photo de profil" class="profile-picture">
        </div>

        <!-- STATS + TOUCHES -->
        <div class="profile-right">
          <div class="stats-grid">
            <div class="stat-item">
              <span class="stat-label">Matchs jou√©s</span>
              <span class="stat-value" id="stat-matches">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Victoires</span>
              <span class="stat-value stat-win" id="stat-wins">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">D√©faites</span>
              <span class="stat-value stat-lose" id="stat-losses">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Tournois particip√©s</span>
              <span class="stat-value" id="stat-tournaments-played">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Tournois gagn√©s</span>
              <span class="stat-value stat-win" id="stat-tournaments-won">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Buts marqu√©s</span>
              <span class="stat-value" id="stat-goals-for">X XXX</span>
            </div>
            <div class="stat-item">
              <span class="stat-label">Buts encaiss√©s</span>
              <span class="stat-value" id="stat-goals-against">X XXX</span>
            </div>
          </div>

          <div class="controls-box">
            <h3>Vos touches</h3>
            <div class="controls">
              <p>Si vous jouez √† gauche :
                Haut: <strong id="control-left-up"></strong> /
                Bas: <strong id="control-left-down"></strong> /
                Gauche: <strong id="control-left-left"></strong> /
                Droite: <strong id="control-left-right"></strong>
              </p>
              <p>Si vous jouez √† droite :
                Haut: <strong id="control-right-up"></strong> /
                Bas: <strong id="control-right-down"></strong> /
                Gauche: <strong id="control-right-left"></strong> /
                Droite: <strong id="control-right-right"></strong>
              </p>
            </div>
            <button id="edit-controls-btn" class="btn-edit">Modifier mes touches</button>
          </div>
        </div>
      </div>
    </section>

    <!-- MES AMIS -->
    <section class="friends-section">
      <h3>üë• Mes Amis (<span id="friends-count">0</span>)</h3>
      <div class="friends-grid" id="friends-list">
        <!-- Rempli dynamiquement par JS -->
      </div>
      <p id="friends-empty" class="empty-message" style="display: none;">
        Vous n'avez pas encore d'amis. Ajoutez des joueurs du Top 3 dans le classement !
      </p>
    </section>

    <!-- HISTORIQUE DES MATCHS -->
    <section class="history-section">
      <h3>üìú Historique des parties</h3>
      <div class="history-table-wrapper">
        <table class="history-table">
          <thead>
            <tr>
              <th class="col-date">Date</th>
              <th class="col-game">Jeu</th>
              <th class="col-match">Match</th>
              <th class="col-score">Score</th>
              <th class="col-result">R√©sultat</th>
            </tr>
          </thead>
          <tbody id="history-list">
            <!-- Rempli dynamiquement par JS -->
          </tbody>
        </table>
      </div>
      <p id="history-empty" class="history-empty" style="display: none;">Aucune partie jou√©e pour le moment.</p>
    </section>
  </div>
</div>
