<div class="container">
  <header class="arcade-header">
    <h1 class="arcade-title"><%= title %></h1>
    <p class="arcade-subtitle">Prépare ton tournoi et affronte les meilleurs !</p>
  </header>

  <div class="tournament-config-wrapper">
    <nav class="tournament-config-buttons">
      <form id="tournament-form" class="tournament-form">
        <h2 class="form-title-of-beginTournament">Tournoi à 4 joueurs</h2>
        <div class="tournament-players-grid">

            <!-- Joueur 1 -->
            <div class="tournament-player-card">
              <h3 class="player-card-title">Joueur 1</h3>
              <input type="text" id="player1" name="player1" placeholder="Pseudo" required>
              <div class="player-card-checkboxes">
                <label class="checkbox-label">
                  <input type="checkbox" id="human1" name="human1" checked>
                  Humain
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" id="isMe1" name="isMe1">
                  C'est moi
                </label>
              </div>
            </div>

            <!-- Joueur 2 -->
            <div class="tournament-player-card">
              <h3 class="player-card-title">Joueur 2</h3>
              <input type="text" id="player2" name="player2" placeholder="Pseudo" required>
              <div class="player-card-checkboxes">
                <label class="checkbox-label">
                  <input type="checkbox" id="human2" name="human2">
                  Humain
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" id="isMe2" name="isMe2">
                  C'est moi
                </label>
              </div>
            </div>

            <!-- Joueur 3 -->
            <div class="tournament-player-card">
              <h3 class="player-card-title">Joueur 3</h3>
              <input type="text" id="player3" name="player3" placeholder="Pseudo" required>
              <div class="player-card-checkboxes">
                <label class="checkbox-label">
                  <input type="checkbox" id="human3" name="human3">
                  Humain
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" id="isMe3" name="isMe3">
                  C'est moi
                </label>
              </div>
            </div>

            <!-- Joueur 4 -->
            <div class="tournament-player-card">
              <h3 class="player-card-title">Joueur 4</h3>
              <input type="text" id="player4" name="player4" placeholder="Pseudo" required>
              <div class="player-card-checkboxes">
                <label class="checkbox-label">
                  <input type="checkbox" id="human4" name="human4">
                  Humain
                </label>
                <label class="checkbox-label">
                  <input type="checkbox" id="isMe4" name="isMe4">
                  C'est moi
                </label>
              </div>
            </div>

          </div>
        <button type="submit" id="list_of_player_tournament" class="start-btn">Start Tournament</button>
      </form>
    </nav>
  </div>
</div>
