<div class="container">
  <!-- HEADER -->
  <header class="arcade-header">
    <h1 class="arcade-title"><%= title %></h1>
    <p class="arcade-subtitle">Aller connecte TOI!! ONE MORE GAME. ONE MORE GAME !!</p>
  </header>

  <div class="for-center">
    <!-- FORMULAIRE LOGIN -->
    <div id="login-form-section" class="login-signup-wrapper">
      <form id="login-form" aria-label="Formulaire de connexion">
        <!-- TITRE FORM -->
        <h2 class="form-title">Connexion</h2>

        <!-- USERNAME -->
        <div class="input-block">
          <label for="login-username">Pseudo :</label>
          <input
          type="text"
          id="login-username"
          name="username"
          placeholder="Ton pseudo"
          required
          minlength="1"
          maxlength="16">
        </div>

        <!-- PASSWORD -->
        <div class="input-block">
          <label for="login-password">Mot de passe :</label>
          <input
          type="password"
          id="login-password"
          name="password"
          placeholder="Ton mot de passe"
          required
          minlength="6">
        </div>

        <!-- ERROR MESSAGE -->
        <div id="login-error" class="error-message" style="display: none;"></div>

        <!-- SUBMIT -->
        <button type="submit" id="login-btn" class="btn-send-connection">Se connecter</button>

        <!-- SÉPARATEUR -->
        <div class="auth-separator">
          <span>OU</span>
        </div>

        <!-- BOUTON GOOGLE SIGN-IN -->
        <a href="/api/auth/google" class="btn-google-signin">
          <svg class="google-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          Continuer avec Google
        </a>

        <!-- LIEN VERS SIGNUP -->
        <p class="auth-switch">
          Pas encore de compte ?
          <button data-link="go_to_Signup" class="auth-link" type="button">Créer un compte</button>
        </p>
      </form>
    </div>

    <!-- PARTIAL 2FA INPUT (caché par défaut) -->
    <%- include('../partials/2fa-input') %>
  </div>
</div>
