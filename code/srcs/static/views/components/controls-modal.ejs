<!-- Modal de modification des contrôles clavier -->
<div id="controls-modal" class="controls-modal hidden">
  <div class="controls-modal-content">
    <h2 class="controls-modal-title">Modifier les touches</h2>
    <p class="controls-modal-subtitle">Cliquez sur un champ et appuyez sur la touche souhaitée</p>

    <div class="controls-modal-inputs">
      <div class="controls-modal-input-group">
        <label class="controls-modal-label">Joueur Gauche - Haut :</label>
        <input id="key-left-up" class="controls-modal-input" readonly>
      </div>

      <div class="controls-modal-input-group">
        <label class="controls-modal-label">Joueur Gauche - Bas :</label>
        <input id="key-left-down" class="controls-modal-input" readonly>
      </div>

      <div class="controls-modal-input-group">
        <label class="controls-modal-label">Joueur Droite - Haut :</label>
        <input id="key-right-up" class="controls-modal-input" readonly>
      </div>

      <div class="controls-modal-input-group">
        <label class="controls-modal-label">Joueur Droite - Bas :</label>
        <input id="key-right-down" class="controls-modal-input" readonly>
      </div>
    </div>

    <div class="controls-modal-buttons">
      <button id="save-controls-btn" class="controls-modal-btn controls-modal-btn-save">Sauvegarder</button>
      <button id="cancel-controls-btn" class="controls-modal-btn controls-modal-btn-cancel">Annuler</button>
    </div>
  </div>
</div>
