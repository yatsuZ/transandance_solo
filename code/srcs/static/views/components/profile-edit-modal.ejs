<!-- Modal d'édition du profil utilisateur -->
<div id="profile-edit-modal" class="profile-edit-modal hidden">
  <div class="profile-edit-modal-content">
    <h2 class="profile-edit-modal-title">Modifier mon profil</h2>

    <form id="profile-edit-form" class="profile-edit-form">
      <!-- Photo de profil -->
      <div class="profile-edit-photo-section">
        <img id="profile-edit-preview" class="profile-edit-preview" alt="Photo de profil">
        <div class="profile-edit-photo-controls">
          <label for="profile-edit-photo-input" class="profile-edit-photo-label">
            Changer la photo
          </label>
          <input
            type="file"
            id="profile-edit-photo-input"
            accept="image/jpeg,image/png,image/gif,image/webp"
            class="profile-edit-photo-input"
          >
          <p class="profile-edit-photo-hint">JPG, PNG, GIF ou WEBP (max 5MB)</p>
        </div>
      </div>

      <!-- Informations de base -->
      <div class="profile-edit-section">
        <h3 class="profile-edit-section-title">Informations de base</h3>
        <div class="profile-edit-fields">
          <div class="profile-edit-field">
            <label class="profile-edit-label">Nom d'utilisateur</label>
            <input
              type="text"
              id="profile-edit-username"
              class="profile-edit-input"
              placeholder="Votre pseudo"
              minlength="1"
              maxlength="20"
            >
          </div>

          <div class="profile-edit-field">
            <label class="profile-edit-label">Email</label>
            <input
              type="email"
              id="profile-edit-email"
              class="profile-edit-input"
              placeholder="votre@email.com"
            >
          </div>
        </div>
      </div>

      <!-- Mot de passe (optionnel) -->
      <div class="profile-edit-section">
        <h3 class="profile-edit-section-title">
          Changer le mot de passe
          <span class="profile-edit-optional">(optionnel)</span>
        </h3>
        <p class="profile-edit-hint">Laisser vide pour conserver votre mot de passe actuel</p>
        <div class="profile-edit-fields">
          <div class="profile-edit-field">
            <label class="profile-edit-label">Nouveau mot de passe</label>
            <input
              type="password"
              id="profile-edit-password"
              class="profile-edit-input"
              placeholder="Minimum 6 caractères"
              minlength="6"
            >
          </div>

          <div class="profile-edit-field">
            <label class="profile-edit-label">Confirmer le mot de passe</label>
            <input
              type="password"
              id="profile-edit-password-confirm"
              class="profile-edit-input"
              placeholder="Confirmer le nouveau mot de passe"
            >
          </div>
        </div>
      </div>

      <!-- Messages d'erreur/succès -->
      <div id="profile-edit-message" class="profile-edit-message hidden"></div>

      <!-- Boutons -->
      <div class="profile-edit-buttons">
        <button type="submit" id="profile-edit-save-btn" class="profile-edit-btn profile-edit-btn-save">
          Sauvegarder
        </button>
        <button type="button" id="profile-edit-cancel-btn" class="profile-edit-btn profile-edit-btn-cancel">
          Annuler
        </button>
      </div>
    </form>
  </div>
</div>
