{
  "name": "srcs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc && cp -r ./srcs/static ./dist/",
    "build:client": "npx tsc -p tsconfig.client.json",
    "start": "node dist/srcs/backend/main.js",
    "dev": "npm run build && npm run build:client && npm run start | pino-pretty --colorize",
    "dev:chalk": "npm run build && npm run build:client && npm run start",
    "dev:watch": "ts-node-dev --respawn --transpile-only backend/main.ts | pino-pretty --colorize",
    "clean": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./coverage",
    "clean:data": "rm -rf ./srcs/backend/data/pong.db",
    "clean:all": "rm -rf ./dist ./coverage ./srcs/backend/data/pong.db",
    "redev": "npm run clean; npm run build && npm run build:client && npm run start | pino-pretty --colorize",
    "redev:watch": "npm run clean; ts-node-dev --respawn --transpile-only --watch srcs/backend,srcs/static/js srcs/backend/main.ts",
    "test": "jest --verbose",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@fastify/view": "^11.1.1",
    "@sinclair/typebox": "^0.34.41",
    "animejs": "^4.2.2",
    "chalk": "^4.1.2",
    "ejs": "^3.1.10",
    "fastify": "^5.6.0",
    "http-status-codes": "^2.3.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/ejs": "^3.1.5",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/qrcode-terminal": "^0.12.2",
    "better-sqlite3": "^12.4.6",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.1",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  }
}
